<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>updations of file</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" href="/css/update.css">
</head>
<body>
    <form method="POST" action="/showlist/<%= listing._id %>?_method=PUT" novalidate>
            <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title" value="<%=listing.title%>" required>
            <div class="invalid-feedback">Invalid name</div>
        </div>
            <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Description" value="<%=listing.description%>" required>
            <div class="invalid-feedback">Invalid description</div>
        </div>
            <div class="form-group">
            <input type="number" name="price" class="form-control" placeholder="Price" value="<%=listing.price%>" required>
            <div class="invalid-feedback">Fill correct price</div>
        </div>
            <div class="form-group">
            <input type="text" name="country" class="form-control" placeholder="Country" value="<%=listing.country%>" required>
            <div class="invalid-feedback">Correct the above details</div>
        </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <button >submit</button>
    </form>
    <script>document.querySelector("form").addEventListener("submit", function (event) {
        if (!this.checkValidity()) {
            event.preventDefault(); // Stop form submission
            event.stopPropagation();
        }
        this.classList.add("was-validated"); // Enable Bootstrap validation styles
    });
    </script>
</body>
</html>